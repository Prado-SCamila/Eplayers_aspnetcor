@model Equipe

@{
    ViewData ["title"] = "Equipe";

    //criar um formulário para aparecer na página - enctype é pra aceitar arquivos no formulário
    <form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

        <label>ID</label>
        <input type="text" name ="IdEquipe"/>

        <label>Nome</label>
        <input type="text" name ="Nome"/>

        <label>Imagem</label>
         <input type="file" name ="Imagem"/>
        
        <button type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped table-responsive">

        <thread>
            <th>ID</th>
            <th>Nome</th>
            <th>Foto</th>
        </thread>
        <tbody>
            @foreach(Equipe equipe in ViewBag.Equipes){
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da Equipe.Nome"></td>
                    <td><a asp-area="Link para excluir uma equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a></td>
                </tr>
            }
        </tbody>
    </table>
}